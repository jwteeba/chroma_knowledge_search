FROM python:3.13-slim
ENV PYTHONDONTWRITEBYTECODE=1 PYTHONUNBUFFERED=1
WORKDIR /app
RUN pip install --upgrade pip
RUN pip install streamlit python-multipart pydantic-settings pydantic[email] itsdangerous fastapi uvicorn openai chromadb pdfminer.six python-docx tenacity sqlalchemy aiosqlite passlib python-jose bcrypt httpx pydantic
COPY src/ /app/
ENV PYTHONPATH=/app
EXPOSE 8000
CMD ["uvicorn", "chroma_knowledge_search.backend.app.main:app", "--host", "0.0.0.0", "--port", "8000"]
